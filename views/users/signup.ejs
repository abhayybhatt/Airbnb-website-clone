<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Sign Up on Wanderlust!</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3"><!--bootstrap class hai: margin bottom 3, used for adding spacing in between.-->
                <label for="username" class="form-label">Username</label><!--yha form-label aur form-control bhi bootstrap ki classes hai.-->
                <input name="username" id="username" placeholder="Enter a catchy username" type="text" class="form-control" required> <!--required set kr diya yaani username field mein kuch na kuch name rakhna hi padega.-->
                <div class="valid-feedback">
                    Looks good! <!--ye message tabhi show hoga jab username ko apan sahi add krenge.-->
                </div>
            </div>

            <div class="mb-3"><!--bootstrap class hai: margin bottom 3, used for adding spacing in between.-->
                <label for="email" class="form-label">Email</label><!--yha form-label aur form-control bhi bootstrap ki classes hai.-->
                <input name="email" id="email" placeholder="Enter your email" type="email" class="form-control" required> <!--required set kr diya yaani username field mein kuch na kuch name rakhna hi padega.-->
            </div>

            <div class="mb-3"><!--bootstrap class hai: margin bottom 3, used for adding spacing in between.-->
                <label for="password" class="form-label">Password</label><!--yha form-label aur form-control bhi bootstrap ki classes hai.-->
                <input name="password" id="password" placeholder="Enter your password" type="password" class="form-control" required> <!--required set kr diya yaani username field mein kuch na kuch name rakhna hi padega.-->
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>